@model LoginVM
@using bookstore_mvc.Data.ViewModels;

@{
    ViewData["Title"] = "Login to BookStore";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form class="form" id="account" method="post" asp-action="Login">
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="text-danger">
    @if(TempData["Error"] != null)
    {
      <ul class="validation-summary-errors">
        <li>@TempData["Error"]</li>
      </ul>
    }
  </div>
    <div class="form__item">
      <label class="item__text" asp-for="Email"></label>
      <input class="item__text" asp-for="Email" />
      <span class="item__warning-msg" asp-validation-for="Email"></span>
    </div>
    <div class="form__item">
      <label class="item__text" asp-for="Password"></label>
      <input class="item__text" asp-for="Password" />
      <span class="item__warning-msg" asp-validation-for="Password"></span>
    </div>
    <div class="form__item">
      <div class="checkbox">
      <label asp-for="RememberMe">
        <input asp-for="RememberMe" />
        @Html.DisplayNameFor(m => m.RememberMe)
      </label>
    </div>

  </div>
 
  <div class="form__group">
    <button type="submit" class="btn">Log in</button>
  </div>
