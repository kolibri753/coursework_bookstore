<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="A better way to buy books online. Here you can buy interesting books for children and adults">
    <title>@ViewData["Title"] - bookstore_mvc</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/icons/favicon-16x16.png">
    <link rel="manifest" href="~/img/icons/site.webmanifest">
    <link rel="mask-icon" href="~/img/icons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="~/img/icons/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffc40d">
    <meta name="msapplication-config" content="~/img/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bookstore_mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-toggleable-md navbar-light">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="header">
                    <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo__img" src="/img/icons/logo.svg" alt="Logo">
                    </a>
            		<form class="header__form" asp-controller="Books" asp-action="Search">
                        <input name="searchString" type="text" placeholder="Search for a book...">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </form>
            		<ul class="header__links navbar-collapse collapse">
                        @await Html.PartialAsync("_AuthNavigation")
            			@await Component.InvokeAsync("DisplayCartQuantity")
            		</ul>
            		<ul class="header__list navbar-collapse collapse">
            			<li class="header__item">
                            <a class="header__link" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
            			</li>
            			<li class="header__item">
                            <a class="header__link" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
            			</li>
            			<li class="header__item">
                            <a class="header__link" asp-area="" asp-controller="Publishers" asp-action="Index">Publishers</a>
            			</li>
            		</ul>
                    <ul class="header__links navbar-collapse collapse">
                        <li class="header__item">
            		        <a class="header__link" asp-area="" asp-controller="Home" asp-action="Help">Help</a>
                        </li>
                    </ul>
                </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted dark bg-black">
        <div class="container text-light text-center">
            &copy; 2022 Vira Vakhovska. All rights reserved.</a>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/b983d82776.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>