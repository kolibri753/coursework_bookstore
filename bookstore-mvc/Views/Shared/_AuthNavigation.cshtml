@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
  <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Account</a>
  </li>
}
else 
{
  <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">@UserManager.GetUserName(User)</a>
  </li>
  <li class="nav-item">
    <form asp-controller="Account" asp-action="Logout">
      @* <a class="nav-link text-dark" asp-area="" >Logout</a> *@
      <button class="btn">Logout</button>
    </form>
  </li>
}